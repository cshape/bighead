{% extends 'layout.html.twig' %}

{% block content %}

    <div style="text-align: center">
    <h1>Welcome to Big Head!</h1>
    <h1><b><a href="https://meet.jit.si/BigHead2020" target="_blank">Join the jitsi call</a> and then click your name.</b></h1>
    <br><br>
        <h1>Choose a player:</h1>
        {% for player in players %}
            <a class="player-choice" href="/play/{{ player }}">
